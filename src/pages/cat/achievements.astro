---
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { db, achievements } from "../../db";

let achievementsList: typeof achievements.$inferSelect[] = [];
try {
  achievementsList = await db.select().from(achievements).orderBy(achievements.order);
} catch (error) {
  console.error('Fetch achievements error:', error);
}
---

<AdminLayout title="Achievements">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white">Achievements</h1>
        <p class="text-gray-400 mt-2">Manage your achievements and badges</p>
      </div>
      <button 
        id="addBtn"
        class="px-4 py-2 bg-neon-cyan text-black font-bold rounded-lg hover:bg-neon-cyan/90 transition-colors"
      >
        + Add Achievement
      </button>
    </div>
    
    <!-- Achievements Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {achievementsList.map((achievement) => (
        <div class="achievement-item glass-panel rounded-xl p-4 border border-white/10 text-center group" data-id={achievement.id}>
          <div class="text-4xl mb-2">{achievement.icon}</div>
          <h3 class="font-bold text-white">{achievement.name}</h3>
          <p class="text-xs text-gray-400 mt-1">{achievement.description}</p>
          
          <div class="mt-4 flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <button 
              class="edit-btn px-2 py-1 text-xs bg-white/5 hover:bg-white/10 border border-white/10 rounded transition-colors"
              data-achievement={JSON.stringify(achievement)}
            >
              Edit
            </button>
            <button 
              class="delete-btn px-2 py-1 text-xs bg-red-500/10 hover:bg-red-500/20 text-red-400 border border-red-500/20 rounded transition-colors"
              data-id={achievement.id}
            >
              Delete
            </button>
          </div>
        </div>
      ))}
      
      {achievementsList.length === 0 && (
        <div class="col-span-4 text-center text-gray-500 py-12">
          No achievements yet. Click "Add Achievement" to create one.
        </div>
      )}
    </div>
  </div>
  
  <!-- Modal -->
  <div id="modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80">
    <div class="glass-panel rounded-2xl p-6 w-full max-w-md border border-white/10 m-4">
      <h2 id="modalTitle" class="text-xl font-bold text-white mb-6">Add Achievement</h2>
      
      <form id="achievementForm" class="space-y-4">
        <input type="hidden" name="id" />
        
        <div>
          <label class="block text-sm text-gray-400 mb-2">Name</label>
          <input 
            type="text" 
            name="name" 
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-neon-cyan/50 transition-colors"
            placeholder="Starstruck"
          />
        </div>
        
        <div>
          <label class="block text-sm text-gray-400 mb-2">Icon (emoji)</label>
          <input 
            type="text" 
            name="icon" 
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-neon-cyan/50 transition-colors text-2xl text-center"
            placeholder="â­"
            maxlength="4"
          />
        </div>
        
        <div>
          <label class="block text-sm text-gray-400 mb-2">Description</label>
          <input 
            type="text" 
            name="description" 
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-neon-cyan/50 transition-colors"
            placeholder="Created a repository that has 16 stars"
          />
        </div>
        
        <div>
          <label class="block text-sm text-gray-400 mb-2">Order</label>
          <input 
            type="number" 
            name="order" 
            value="0"
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-neon-cyan/50 transition-colors"
          />
        </div>
        
        <div class="flex items-center justify-end gap-3 pt-4">
          <button 
            type="button"
            id="cancelBtn"
            class="px-4 py-2 text-gray-400 hover:text-white transition-colors"
          >
            Cancel
          </button>
          <button 
            type="submit"
            class="px-6 py-2 bg-neon-cyan text-black font-bold rounded-lg hover:bg-neon-cyan/90 transition-colors"
          >
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script>
  const modal = document.getElementById('modal') as HTMLDivElement;
  const modalTitle = document.getElementById('modalTitle') as HTMLHeadingElement;
  const form = document.getElementById('achievementForm') as HTMLFormElement;
  const addBtn = document.getElementById('addBtn') as HTMLButtonElement;
  const cancelBtn = document.getElementById('cancelBtn') as HTMLButtonElement;
  
  let isEditing = false;
  
  function openModal(editing = false, data: any = null) {
    isEditing = editing;
    modalTitle.textContent = editing ? 'Edit Achievement' : 'Add Achievement';
    
    if (data) {
      (form.elements.namedItem('id') as HTMLInputElement).value = data.id;
      (form.elements.namedItem('name') as HTMLInputElement).value = data.name;
      (form.elements.namedItem('icon') as HTMLInputElement).value = data.icon;
      (form.elements.namedItem('description') as HTMLInputElement).value = data.description;
      (form.elements.namedItem('order') as HTMLInputElement).value = data.order || '0';
    } else {
      form.reset();
    }
    
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }
  
  function closeModal() {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    form.reset();
  }
  
  addBtn.addEventListener('click', () => openModal(false));
  cancelBtn.addEventListener('click', closeModal);
  
  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });
  
  // Edit buttons
  document.querySelectorAll('.edit-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const data = JSON.parse((btn as HTMLButtonElement).dataset.achievement || '{}');
      openModal(true, data);
    });
  });
  
  // Delete buttons
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      if (!confirm('Are you sure you want to delete this achievement?')) return;
      
      const id = parseInt((btn as HTMLButtonElement).dataset.id || '0');
      
      try {
        const response = await fetch('/api/admin/achievements', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id }),
        });
        
        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Delete error:', error);
      }
    });
  });
  
  // Form submit
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      id: formData.get('id') ? parseInt(formData.get('id') as string) : undefined,
      name: formData.get('name'),
      icon: formData.get('icon'),
      description: formData.get('description'),
      order: parseInt(formData.get('order') as string) || 0,
    };
    
    try {
      const response = await fetch('/api/admin/achievements', {
        method: isEditing ? 'PUT' : 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      
      if (response.ok) {
        window.location.reload();
      }
    } catch (error) {
      console.error('Save error:', error);
    }
  });
</script>
