---
export const prerender = true;

import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";
import {
  db,
  experiences,
  education,
  publications,
  interests,
  skills,
  bioContent,
  siteSettings,
} from "../db";

// Fetch data
const [
  experiencesList,
  educationList,
  publicationsList,
  interestsList,
  skillsList,
  bioData,
  settingsData,
] = await Promise.all([
  db.select().from(experiences).orderBy(experiences.order),
  db.select().from(education).orderBy(education.order),
  db.select().from(publications).orderBy(publications.order),
  db.select().from(interests).orderBy(interests.order),
  db.select().from(skills).orderBy(skills.order),
  db.select().from(bioContent),
  db.select().from(siteSettings),
]);

// Helper maps
const bio: Record<string, string> = {};
bioData.forEach((b) => (bio[b.key] = b.value));

const settings: Record<string, string> = {};
settingsData.forEach((s) => (settings[s.key] = s.value));

// Fallback to siteConfig if DB is empty (optional, but good for safety)
// Or just use the DB values and fallback inline
const author = settings.author || siteConfig.author;
const location = settings.location || siteConfig.location;
const bioLong = bio.long || siteConfig.bio.long;
const bioShort = bio.short || siteConfig.bio.short;
const bioQuote = bio.quote || siteConfig.bio.quote;
const bioIntro =
  bio.intro ||
  `I'm ${author} (স্বাধীন বিশ্বাস), which means "Freedom" in Bengali. I'm a passionate Backend Engineer and AI Systems Architect based in ${location}.`;
const bioStory =
  bio.story ||
  "With a deep love for problem-solving and building systems that scale, I've dedicated my career to creating backend infrastructure and AI solutions that help people express and share their ideas more effectively. I believe every problem has a solution – you just need to find the right algorithm.";

// Format date
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", { month: "short", year: "numeric" });
}
---

<BaseLayout title="About">
  <div class="animate-fade-in">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl sm:text-5xl font-bold text-text mb-4">
        About <span class="text-accent">Me</span>
      </h1>
      <p class="text-lg text-subtext0 max-w-2xl">
        {bioLong}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-10">
        <!-- Bio Section -->
        <section>
          <h2
            class="text-xl font-semibold text-text mb-4 flex items-center gap-2"
          >
            <svg
              class="w-5 h-5 text-accent"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            Who I Am
          </h2>
          <div class="prose prose-invert max-w-none">
            <p class="text-subtext0 leading-relaxed whitespace-pre-line">
              {bioIntro}
            </p>
            <p class="text-subtext0 leading-relaxed mt-4 whitespace-pre-line">
              {bioStory}
            </p>
            <blockquote
              class="mt-6 border-l-4 border-accent/50 pl-4 italic text-subtext1"
            >
              "{bioQuote}"
            </blockquote>
          </div>
        </section>

        <!-- Experience Section -->
        {
          experiencesList.length > 0 && (
            <section>
              <h2 class="text-xl font-semibold text-text mb-6 flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-green"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
                Experience
              </h2>

              <div class="space-y-4">
                {experiencesList.map((exp) => (
                  <a
                    href={exp.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block bg-mantle border border-surface0/50 rounded-2xl p-5 hover:border-accent/50 transition-all duration-300"
                  >
                    <div class="flex items-start gap-4">
                      <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-surface0 overflow-hidden flex items-center justify-center">
                        {exp.logoUrl ? (
                          <img
                            src={exp.logoUrl}
                            alt={exp.company}
                            class="w-full h-full object-cover"
                          />
                        ) : (
                          <span class="text-2xl font-bold text-accent">
                            {exp.company.charAt(0)}
                          </span>
                        )}
                      </div>
                      <div class="flex-1">
                        <h3 class="text-lg font-semibold text-text group-hover:text-accent transition-colors">
                          {exp.role}
                        </h3>
                        <p class="text-sm text-subtext0">{exp.company}</p>
                        <p class="text-xs text-overlay0 mt-1">
                          {formatDate(exp.startDate)} -{" "}
                          {exp.endDate ? formatDate(exp.endDate) : "Present"}
                        </p>
                        {exp.companyDescription && (
                          <p class="text-xs text-mauve mt-1 italic">
                            {exp.companyDescription}
                          </p>
                        )}
                        {exp.details && (
                          <p class="text-sm text-subtext1 mt-2">
                            {exp.details}
                          </p>
                        )}
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )
        }

        <!-- Education Section -->
        {
          educationList.length > 0 && (
            <section>
              <h2 class="text-xl font-semibold text-text mb-6 flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 14l9-5-9-5-9 5 9 5z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 14l9-5-9-5-9 5 9 5z"
                  />
                </svg>
                Education
              </h2>

              <div class="space-y-4">
                {educationList.map((edu) => (
                  <div class="bg-mantle border border-surface0/50 rounded-2xl p-5 hover:border-accent/30 transition-colors">
                    <div class="flex items-start gap-4">
                      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-surface0/50 flex items-center justify-center text-accent">
                        <svg
                          class="w-6 h-6"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 14l9-5-9-5-9 5 9 5z"
                          />
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                          />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <h3 class="text-lg font-semibold text-text">
                          {edu.institution}
                        </h3>
                        <p class="text-sm text-accent">{edu.degree}</p>
                        <p class="text-xs text-overlay0 mt-1">
                          {formatDate(edu.startDate)} -{" "}
                          {edu.endDate ? formatDate(edu.endDate) : "Present"}
                        </p>
                        {edu.details && (
                          <p class="text-sm text-subtext1 mt-2 whitespace-pre-line">
                            {edu.details}
                          </p>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )
        }

        <!-- Publications Section -->
        {
          publicationsList.length > 0 && (
            <section>
              <h2 class="text-xl font-semibold text-text mb-6 flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-mauve"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  />
                </svg>
                Publications
              </h2>

              <div class="space-y-4">
                {publicationsList.map((pub) => (
                  <div class="bg-mantle border border-surface0/50 rounded-2xl p-5 hover:border-accent/30 transition-colors">
                    <div class="flex flex-col gap-2">
                      <div class="flex justify-between items-start">
                        <h3 class="text-lg font-semibold text-text">
                          {pub.url ? (
                            <a
                              href={pub.url}
                              target="_blank"
                              class="hover:text-accent transition-colors"
                            >
                              {pub.title}
                            </a>
                          ) : (
                            pub.title
                          )}
                        </h3>
                        <span class="text-xs text-overlay0 whitespace-nowrap ml-4">
                          {formatDate(pub.date)}
                        </span>
                      </div>
                      {pub.venue && (
                        <p class="text-sm text-accent font-mono">{pub.venue}</p>
                      )}
                      {pub.description && (
                        <p class="text-sm text-subtext1">{pub.description}</p>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )
        }

        <!-- Achievements Section -->
        {
          siteConfig.achievements && siteConfig.achievements.length > 0 && (
            <section>
              <h2 class="text-xl font-semibold text-text mb-6 flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-yellow"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                  />
                </svg>
                Achievements
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {siteConfig.achievements.map((item) => (
                  <div class="bg-mantle border border-surface0/50 rounded-2xl p-4 hover:border-yellow/30 transition-colors flex flex-col gap-3">
                    <div class="flex items-start gap-4">
                      <div class="text-2xl flex-shrink-0">{item.icon}</div>
                      <div>
                        <h3 class="font-bold text-text text-sm">{item.name}</h3>
                        <p class="text-xs text-subtext0 mt-1">
                          {item.description}
                        </p>
                      </div>
                    </div>
                    {item.image && (
                      <div class="rounded-lg overflow-hidden mt-1 border border-surface0/50">
                        <img
                          src={item.image}
                          alt={item.name}
                          class="w-full h-32 object-cover hover:scale-105 transition-transform duration-500"
                        />
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </section>
          )
        }
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Skills Card -->
        <div class="bg-mantle border border-surface0/50 rounded-2xl p-6">
          <h3
            class="text-sm font-semibold text-text mb-4 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4 text-mauve"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
            Skills & Technologies
          </h3>
          <div class="flex flex-wrap gap-2">
            {
              skillsList.map((skill) => (
                <span class="text-xs px-2.5 py-1 bg-surface0/50 text-subtext0 rounded-lg border border-surface0 hover:text-accent hover:border-accent/30 transition-colors">
                  {skill.name}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Interests Card -->
        {
          interestsList.length > 0 && (
            <div class="bg-mantle border border-surface0/50 rounded-2xl p-6">
              <h3 class="text-sm font-semibold text-text mb-4 flex items-center gap-2">
                <svg
                  class="w-4 h-4 text-pink"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  />
                </svg>
                Interests & Hobbies
              </h3>
              <div class="space-y-3">
                {interestsList.map((interest) => {
                  const getIcon = (name: string) => {
                    const n = name.toLowerCase();
                    if (n.includes("open source") || n.includes("coding")) {
                      return (
                        <svg
                          class="w-6 h-6 text-blue"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                          />
                        </svg>
                      );
                    } else if (n.includes("movie") || n.includes("cinema")) {
                      return (
                        <svg
                          class="w-6 h-6 text-red"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"
                          />
                        </svg>
                      );
                    } else if (n.includes("anime") || n.includes("manga")) {
                      return (
                        <svg
                          class="w-6 h-6 text-pink"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                          />
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                      );
                    } else if (
                      n.includes("tech") ||
                      n.includes("exploration") ||
                      n.includes("rocket")
                    ) {
                      return (
                        <svg
                          class="w-6 h-6 text-yellow"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z"
                          />
                        </svg>
                      );
                    } else if (
                      n.includes("food") ||
                      n.includes("biriyani") ||
                      n.includes("cooking")
                    ) {
                      return (
                        <img
                          src="/icons/food.png"
                          alt="Food"
                          class="w-6 h-6 object-contain"
                        />
                      );
                    } else {
                      return (
                        <svg
                          class="w-6 h-6 text-accent"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                          />
                        </svg>
                      );
                    }
                  };

                  return (
                    <div class="flex items-start gap-4 p-3 rounded-xl hover:bg-surface0/30 transition-colors">
                      <div class="mt-1 flex-shrink-0 bg-surface0/50 p-2 rounded-lg">
                        {getIcon(interest.name)}
                      </div>
                      <div>
                        <div class="text-base font-medium text-text">
                          {interest.name}
                        </div>
                        {interest.description && (
                          <div class="text-sm text-subtext0 mt-0.5 leading-relaxed">
                            {interest.description}
                          </div>
                        )}
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          )
        }

        <!-- Quick Info Card -->
        <div class="bg-mantle border border-surface0/50 rounded-2xl p-6">
          <h3
            class="text-sm font-semibold text-text mb-4 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4 text-blue"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            Quick Info
          </h3>
          <dl class="space-y-3 text-sm">
            <div class="flex items-start gap-2">
              <dt class="text-subtext0">Location:</dt>
              <dd class="text-text">{siteConfig.location}</dd>
            </div>
            <div class="flex items-start gap-2">
              <dt class="text-subtext0">Email:</dt>
              <dd>
                <a
                  href={`mailto:${siteConfig.email}`}
                  class="text-accent hover:underline"
                >
                  {siteConfig.email}
                </a>
              </dd>
            </div>
            <div class="flex items-start gap-2">
              <dt class="text-subtext0">Timezone:</dt>
              <dd class="text-text">{siteConfig.timezone}</dd>
            </div>
          </dl>

          <div class="mt-6 pt-4 border-t border-surface0/50">
            <a
              href="https://cdn.swadhin.cv/swadhinbiswas.pdf"
              target="_blank"
              class="flex items-center justify-center gap-2 w-full bg-surface0/50 hover:bg-surface0 text-text font-semibold py-2.5 rounded-xl transition-all border border-surface0 hover:border-accent/30 group"
            >
              <svg
                class="w-4 h-4 text-accent group-hover:scale-110 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                ></path>
              </svg>
              Download CV
            </a>
          </div>
        </div>

        <!-- CTA Card -->
        <div
          class="bg-gradient-to-br from-accent/10 to-mauve/10 border border-accent/20 rounded-2xl p-6"
        >
          <h3 class="text-sm font-semibold text-text mb-2">
            Let's work together!
          </h3>
          <p class="text-xs text-subtext0 mb-4">
            I'm always open to discussing new projects and opportunities.
          </p>
          <a
            href={`mailto:${siteConfig.email}`}
            class="inline-flex items-center gap-2 bg-neon-cyan text-gray-900 px-4 py-2 rounded-lg text-sm font-bold hover:bg-neon-cyan/90 transition-colors"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Get in touch
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out;
  }
</style>
