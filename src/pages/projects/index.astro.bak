---
export const prerender = true;

import BaseLayout from "../../layouts/BaseLayout.astro";
import { siteConfig } from "../../config/site";

import { db } from "../../db";
import { projects } from "../../db/schema";
import { desc } from "drizzle-orm";
import ProjectCard from "../../components/projects/ProjectCard.astro";
import ProjectDetailsModal from "../../components/projects/ProjectDetailsModal.astro";
import VizScripts from "../../components/VizScripts.astro";

// Fetch all projects
const dbProjects = await db
  .select()
  .from(projects)
  .orderBy(desc(projects.order));

const allProjects = dbProjects.map((p) => ({
  ...p,
  tags: JSON.parse(p.tags) as string[],
}));

// Catppuccin-inspired gradients
const gradients = [
  "from-mauve to-pink",
  "from-blue to-sapphire",
  "from-green to-teal",
  "from-peach to-yellow",
  "from-red to-maroon",
  "from-lavender to-blue",
];
---

<BaseLayout title="Projects">
  <div class="animate-fade-in">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl sm:text-5xl font-bold text-text mb-4">
        My <span class="text-accent">Projects</span>
      </h1>
      <p class="text-lg text-subtext0 max-w-2xl">
        A collection of things I've built, contributed to, or am currently
        working on. From AI systems to developer tools, each project represents
        a unique challenge solved.
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-12">
      <div
        class="bg-mantle border border-surface0/50 rounded-xl p-4 text-center"
      >
        <p class="text-2xl font-bold text-accent">{allProjects.length}+</p>
        <p class="text-xs text-subtext0">Total Projects</p>
      </div>
      <div
        class="bg-mantle border border-surface0/50 rounded-xl p-4 text-center"
      >
        <p class="text-2xl font-bold text-green">1000+</p>
        <p class="text-xs text-subtext0">GitHub Stars</p>
      </div>
      <div
        class="bg-mantle border border-surface0/50 rounded-xl p-4 text-center"
      >
        <p class="text-2xl font-bold text-blue">15+</p>
        <p class="text-xs text-subtext0">Technologies</p>
      </div>
      <div
        class="bg-mantle border border-surface0/50 rounded-xl p-4 text-center"
      >
        <p class="text-2xl font-bold text-mauve">Open</p>
        <p class="text-xs text-subtext0">Source</p>
      </div>
    </div>

    <!-- Projects Grid -->
    <section class="mb-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allProjects.map((project) => <ProjectCard project={project} />)}
      </div>
    </section>

    <ProjectDetailsModal />

    <!-- CTA -->
    <div class="mt-12 text-center">
      <p class="text-subtext0 mb-4">
        Want to see more? Check out my GitHub profile.
      </p>
      <a
        href={siteConfig.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-neon-cyan text-gray-900 text-base px-6 py-3 rounded-xl font-bold hover:bg-neon-cyan/80 transition-all duration-300 shadow-[0_0_20px_-5px_var(--color-neon-cyan)] hover:shadow-[0_0_30px_-5px_var(--color-neon-cyan)] hover:-translate-y-1"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>
  <VizScripts />
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out;
  }
</style>
