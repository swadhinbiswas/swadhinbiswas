---
const { options = [] } = Astro.props;
---

<dialog
    id="support-modal"
    class="bg-transparent p-0 w-full max-w-lg backdrop:bg-black/80 backdrop:backdrop-blur-sm open:animate-fade-in outline-none m-auto rounded-xl shadow-2xl"
>
    <div
        class="bg-[#1e1e2e] border border-white/10 rounded-xl overflow-hidden p-6 relative"
    >
        <button
            id="close-support-modal"
            class="absolute top-4 right-4 p-2 rounded-lg hover:bg-white/5 text-gray-400 hover:text-white transition-colors"
        >
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <div class="text-center mb-8">
            <div
                class="w-16 h-16 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-4 animate-bounce"
            >
                <svg
                    class="w-8 h-8 text-yellow-400 fill-current"
                    viewBox="0 0 20 20"
                >
                    <path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    ></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-white mb-2">
                Thanks for the Star!
            </h2>
            <p class="text-gray-400">
                If you appreciate my work, consider supporting me.
            </p>
        </div>

        <div
            class="space-y-3 max-h-[400px] overflow-y-auto pr-2 custom-scrollbar"
        >
            {
                options.map((opt: any) =>
                    opt.type === "link" ? (
                        <a
                            href={opt.value}
                            target="_blank"
                            class="flex items-center gap-3 p-4 rounded-lg bg-[#181825] border border-white/5 hover:border-neon-cyan/50 hover:bg-white/5 transition-all group"
                        >
                            <div
                                class="text-2xl w-8 text-center flex items-center justify-center"
                                set:html={opt.icon}
                            />
                            <div class="flex-1 text-left">
                                <div class="font-bold text-white group-hover:text-neon-cyan transition-colors">
                                    {opt.name}
                                </div>
                                <div class="text-xs text-gray-500 truncate">
                                    {opt.value}
                                </div>
                            </div>
                            <svg
                                class="w-5 h-5 text-gray-500 group-hover:text-neon-cyan opacity-0 group-hover:opacity-100 transition-opacity"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                />
                            </svg>
                        </a>
                    ) : (
                        <div class="p-4 rounded-lg bg-[#181825] border border-white/5 group">
                            <div class="flex items-center gap-3 mb-2">
                                <div
                                    class="text-2xl w-8 text-center flex items-center justify-center"
                                    set:html={opt.icon}
                                />
                                <div class="font-bold text-white group-hover:text-neon-cyan transition-colors">
                                    {opt.name}
                                </div>
                            </div>
                            <div
                                class="flex items-center gap-2 bg-black/30 p-2 rounded border border-white/5 cursor-pointer hover:border-neon-cyan/30 transition-colors"
                                onclick={`navigator.clipboard.writeText('${opt.value}'); alert('${opt.name} Copied!')`}
                            >
                                <span class="truncate text-gray-400 group-hover:text-white transition-colors text-xs font-mono flex-1">
                                    {opt.value}
                                </span>
                                <span class="text-[10px] text-gray-600">
                                    Click to Copy
                                </span>
                            </div>
                            {opt.qrCode && (
                                <details class="group/qr mt-3">
                                    <summary class="text-[10px] text-gray-500 cursor-pointer hover:text-neon-cyan transition-colors list-none flex items-center gap-1 w-fit">
                                        <svg
                                            class="w-3 h-3 transition-transform group-open/qr:rotate-90"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 5l7 7-7 7"
                                            />
                                        </svg>
                                        Show QR Code
                                    </summary>
                                    <div class="mt-2 p-2 bg-white rounded-lg w-fit mx-auto">
                                        <img
                                            src={opt.qrCode}
                                            alt={`${opt.name} QR`}
                                            class="w-32 h-32 object-contain"
                                            loading="lazy"
                                        />
                                    </div>
                                </details>
                            )}
                        </div>
                    ),
                )
            }

            {
                options.length === 0 && (
                    <div class="text-center text-gray-500 py-4">
                        No support options configured yet.
                    </div>
                )
            }
        </div>

        <div class="mt-8 text-center">
            <button
                id="maybe-later"
                class="text-sm text-gray-500 hover:text-white transition-colors underline decoration-dotted"
                >Maybe later</button
            >
        </div>
    </div>
</dialog>

<script>
    const modal = document.getElementById("support-modal") as HTMLDialogElement;
    const closeBtn = document.getElementById("close-support-modal");
    const laterBtn = document.getElementById("maybe-later");

    // Expose global function using window
    /* @ts-ignore */
    window.openSupportModal = () => {
        if (modal) modal.showModal();
    };

    /* @ts-ignore */
    window.closeSupportModal = () => {
        if (modal) modal.close();
    };

    /* @ts-ignore */
    if (closeBtn) closeBtn.onclick = window.closeSupportModal;
    /* @ts-ignore */
    if (laterBtn) laterBtn.onclick = window.closeSupportModal;

    if (modal) {
        modal.onclick = (e) => {
            /* @ts-ignore */
            if (e.target === modal) window.closeSupportModal();
        };
    }
</script>
