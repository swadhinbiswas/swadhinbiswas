---
import { siteConfig } from "../../config/site";
import ThemeToggle from "../ThemeToggle.astro";
import GlobalClicker from "../fun/GlobalClicker";
import FooterCat from "../fun/FooterCat";

const currentYear = new Date().getFullYear();
---

<!-- Bottom Spacer to prevent content overlap -->
<div class="h-24"></div>

<!-- Footer Cat Pet - Hidden on very small screens for cleaner mobile UX -->
<div
  class="fixed bottom-14 sm:bottom-18 md:bottom-20 left-0 right-0 z-40 pointer-events-none hidden sm:block"
>
  <div class="max-w-4xl mx-auto px-4 pointer-events-auto">
    <FooterCat client:visible />
  </div>
</div>

<!-- Floating Command Bar / Footer -->
<footer
  class="fixed bottom-4 sm:bottom-6 left-1/2 -translate-x-1/2 z-50 w-full max-w-fit px-2 sm:px-4"
>
  <div
    class="glass-panel px-2 sm:px-4 py-2 sm:py-3 rounded-full flex items-center gap-2 sm:gap-4 md:gap-8 text-[10px] sm:text-xs font-mono text-gray-400 border border-white/5 shadow-2xl backdrop-blur-xl bg-mantle/80"
  >
    <!-- Copyright with Cat Image floating above -->
    <div class="flex items-center gap-1 sm:gap-1.5 whitespace-nowrap relative">
      <!-- Cat floating above the footer bar - responsive sizes -->
      <img
        id="footer-cat-image"
        src="/icons/catimage.png"
        alt="Cat"
        width="100"
        height="100"
        loading="eager"
        decoding="sync"
        data-image-component
        class="absolute -top-10 sm:-top-14 md:-top-20 left-1/2 -translate-x-1/2 w-[40px] sm:w-[60px] md:w-[100px] h-auto object-contain z-10 cursor-pointer hover:scale-110 transition-transform"
      />
      <span class="hidden sm:inline">&copy; {currentYear}</span>
      <span
        id="footer-author-name"
        class="font-[600] tracking-[0.02em] text-white/90
        bg-gradient-to-r from-neon-cyan to-neon-cyan
        bg-[length:0%_2px] bg-no-repeat bg-left-bottom
        hover:bg-[length:100%_2px]
        transition-all duration-150 ease-out
        transition-all duration-150 ease-out
        cursor-pointer"
      >
        {siteConfig.author}
      </span>
    </div>

    <!-- Global Clicker -->
    <div class="hidden sm:block">
      <GlobalClicker client:visible />
    </div>

    <!-- Status Indicator -->
    <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
      <div class="relative flex h-2 w-2">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"
        ></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
        ></span>
      </div>
      <span class="text-gray-300 hidden sm:inline">All Systems Nominal</span>
      <span class="text-gray-300 sm:hidden">Online</span>
    </div>

    <!-- Live Time -->
    <div
      class="hidden md:flex items-center gap-2 whitespace-nowrap min-w-[100px] justify-center"
    >
      <svg
        class="w-3.5 h-3.5 flex-shrink-0"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span id="footer-time" class="tabular-nums">00:00:00</span>
    </div>

    <!-- View Count -->
    <div
      class="hidden lg:block whitespace-nowrap min-w-[80px]"
      id="view-count-container"
    >
      <span id="view-count" class="tabular-nums opacity-60">...</span> views
    </div>

    <!-- Commit Hash -->
    <a
      id="commit-link"
      href="https://github.com/swadhinbiswas"
      target="_blank"
      rel="noopener noreferrer"
      class="hidden lg:flex items-center gap-1 text-gray-500 hover:text-white transition-colors cursor-pointer"
      title="Latest Commit"
    >
      <svg
        class="w-3.5 h-3.5"
        width="100%"
        height="100%"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="12" cy="12" r="4"></circle>
        <line x1="1.05" y1="12" x2="7" y2="12"></line>
        <line x1="17.01" y1="12" x2="22.96" y2="12"></line>
      </svg>
      <span id="commit-hash" class="font-mono">...</span>
    </a>

    <!-- Separator -->
    <div class="h-4 w-px bg-white/10 hidden sm:block"></div>

    <!-- Theme Toggle -->
    <div class="border-r border-white/10 pr-4 mr-1">
      <ThemeToggle />
    </div>

    <!-- Social Icons -->
    <div class="flex items-center gap-3">
      {
        siteConfig.socials
          .filter((s) => s.footer)
          .map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-neon-cyan transition-colors"
              aria-label={social.name}
            >
              {social.icon === "github" && (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              )}
              {social.icon === "linkedin" && (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              )}
              {social.icon === "twitter" && (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {social.icon === "youtube" && (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                </svg>
              )}
            </a>
          ))
      }
    </div>
  </div>
</footer>

<script>
  function updateFooterTime() {
    const timeDisplay = document.getElementById("footer-time");
    if (timeDisplay) {
      const now = new Date();
      timeDisplay.textContent = now.toLocaleTimeString("en-US", {
        hour12: false,
        hour: "2-digit",
        minute: "2-digit",
        second: "2-digit",
      });
    }
  }

  async function updateViewCount() {
    const countDisplay = document.getElementById("view-count");
    if (countDisplay) {
      try {
        const response = await fetch(`/api/views?t=${Date.now()}`);
        if (response.ok) {
          const data = await response.json();
          // Format with commas
          countDisplay.textContent = new Intl.NumberFormat().format(data.views);
          countDisplay.classList.remove("opacity-60");
        }
      } catch (e) {
        console.error("Failed to fetch views", e);
      }
    }
  }

  async function updateCommitInfo() {
    const commitHashEl = document.getElementById("commit-hash");
    const commitLinkEl = document.getElementById(
      "commit-link",
    ) as HTMLAnchorElement;

    if (commitHashEl && commitLinkEl) {
      try {
        const response = await fetch("/api/github/commit");
        if (response.ok) {
          const data = await response.json();
          commitHashEl.textContent = data.sha;
          commitLinkEl.href = data.url;
          commitLinkEl.title = `Latest commit in ${data.repo}`;
        }
      } catch (e) {
        console.error("Failed to fetch commit info", e);
      }
    }
  }

  // Flower Shower & Quote Logic
  import confetti from "canvas-confetti";

  // Floating Quote Toast
  const toast = document.createElement("div");
  toast.id = "quote-toast";
  toast.className =
    "fixed bottom-24 left-1/2 -translate-x-1/2 px-6 py-4 bg-[#0d1117]/95 backdrop-blur-xl border border-neon-cyan/30 rounded-full shadow-[0_0_40px_-5px_rgba(34,211,238,0.4)] text-center transform transition-all duration-500 opacity-0 translate-y-4 pointer-events-none z-[60] min-w-[320px] max-w-[90vw] text-white";
  toast.innerHTML = `
    <p id="quote-text" class="text-sm md:text-base font-bold text-white font-mono tracking-tight leading-relaxed" style="color: #ffffff !important; text-shadow: 0 2px 4px rgba(0,0,0,0.5);"></p>
    <div id="quote-author" class="text-[10px] text-neon-cyan font-extrabold uppercase tracking-[0.2em] mt-2 opacity-90"></div>
  `;
  document.body.appendChild(toast);

  function triggerFlowerShower() {
    const duration = 3000;
    const end = Date.now() + duration;
    // Colors: Pink, Cyan, Purple, White
    const colors = ["#ff69b4", "#22d3ee", "#a855f7", "#ffffff"];

    (function frame() {
      confetti({
        particleCount: 5,
        angle: 60,
        spread: 55,
        origin: { x: 0, y: 0.8 },
        colors: colors,
        shapes: ["circle"],
        scalar: 1.2,
      });
      confetti({
        particleCount: 5,
        angle: 120,
        spread: 55,
        origin: { x: 1, y: 0.8 },
        colors: colors,
        shapes: ["circle"],
        scalar: 1.2,
      });

      if (Date.now() < end) {
        requestAnimationFrame(frame);
      }
    })();
  }

  async function showRandomQuote() {
    const textEl = document.getElementById("quote-text");
    const authorEl = document.getElementById("quote-author");

    if (textEl && toast) {
      try {
        const response = await fetch(
          "https://random-quotes-freeapi.vercel.app/api/random",
        );
        if (response.ok) {
          const data = await response.json();
          textEl.textContent = `"${data.quote}"`;
          if (authorEl) authorEl.textContent = `- ${data.author} -`;

          // Show Toast
          toast.classList.remove("opacity-0", "translate-y-4");
          toast.classList.add("opacity-100", "translate-y-0");

          // Hide after 5s (give more time to read)
          setTimeout(() => {
            toast.classList.remove("opacity-100", "translate-y-0");
            toast.classList.add("opacity-0", "translate-y-4");
          }, 5000);
        }
      } catch (e) {
        console.error("Failed to fetch quote", e);
      }
    }
  }

  const authorName = document.getElementById("footer-author-name");
  const catImage = document.getElementById("footer-cat-image");

  const handleAuthorClick = (e: Event) => {
    e.stopPropagation();
    triggerFlowerShower();
    showRandomQuote();
  };

  if (authorName) {
    authorName.addEventListener("click", handleAuthorClick);
  }
  if (catImage) {
    catImage.addEventListener("click", handleAuthorClick);
  }

  setInterval(updateFooterTime, 1000);
  updateFooterTime();
  updateViewCount();
  updateCommitInfo();

  // --- Cat Image (Local) ---
  // Note: To use Storage, upload the image first and update the URL
</script>
